<body>
  <form action =""> 
  <fieldset>
  <legend>Email Validation </legend>
  <label for="email">Email*</label><br><br>
  <input required  pattern =' /^[a-zA-Z0-9.! #$%&'*+/=? ^_`{|}~-]+@[a-zA-Z0-9-]+(?:\. [a-zA-Z0-9-]+)*$/. 'id="email" type="email"><br><br>
  <input type="submit">
  </fieldset>
  </form>
</body>
